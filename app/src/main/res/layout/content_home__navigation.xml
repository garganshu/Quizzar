<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home__navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zersey.com.zersey.Home_Navigation"
    tools:showIn="@layout/app_bar_home__navigation"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:onClick="Quiz_ONE"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">
        <TextView
            android:id="@+id/quiz_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIZ ONE"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/CardView2"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:visibility="invisible"
        android:onClick="Quiz_TWO"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">
        <TextView
            android:id="@+id/quiz_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIZ TWO"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/CardView3"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:visibility="invisible"
        android:onClick="Quiz_THREE"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">
        <TextView
            android:id="@+id/quiz_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIZ THREE"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/CardView4"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:visibility="invisible"
        android:onClick="Quiz_FOUR"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">
        <TextView
            android:id="@+id/quiz_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIZ FOUR"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/CardView5"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:visibility="invisible"
        android:onClick="Quiz_FIVE"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">
        <TextView
            android:id="@+id/quiz_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIZ FIVE"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>


</LinearLayout>
