<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create__quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:orientation="vertical"
    tools:context="zersey.com.zersey.Create_Quiz">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/Quiz2_ques1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question one"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q1opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q1opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q1opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q1opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q1sol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correct answer"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/Quiz2_ques2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question Two"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q2opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q2opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q2opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q2opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q2sol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correct answer"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/Quiz2_ques3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question Three"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q3opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q3opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q3opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q3opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Quiz2_q3sol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correct answer"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:onClick="quiz_submit"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>
